[MASTER]
init-hook='import sys, os; root = os.path.abspath("."); sys.path.extend([root, os.path.join(root, "ocr-service"), os.path.join(root, "ocr_reconstruct")])'
ignore=CVS,.venv,.venv_test,.venv311,.venv*
ignore-patterns=
persistent=yes
load-plugins=
jobs=1
unsafe-load-any-extension=no
extension-pkg-whitelist=cv2,numpy

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    broad-exception-caught,
    redefined-outer-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-positional-arguments,
    import-outside-toplevel

[REPORTS]
output-format=text
reports=no
evaluation=10 * ((10 - 5 * float(fatal + error + warning + refactor + convention) / statement) or 1)

[FORMAT]
max-line-length=88
expected-line-ending-format=
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

[TYPECHECK]
generated-members=cv2.*,numpy.*,PIL.Image.*,ImageFilter.*,Resampling.*

[BASIC]
good-names=i,j,k,ex,Run,_,e,m,s3,id,se
